<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up â€“ Kiap N' Save</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #8df0d5, #9fc3f8);
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }

    .signup-container {
      background: white;
      padding: 40px 30px;
      border-radius: 18px;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
      width: 100%;
      max-width: 520px;
    }

    h2 {
      text-align: center;
      color: #2b4c60;
      margin-bottom: 25px;
      font-size: 2rem;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    label {
      font-weight: bold;
      margin-bottom: 5px;
    }

    input, select {
      padding: 12px;
      font-size: 1rem;
      border: 2px solid #ddd;
      border-radius: 10px;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    input:focus, select:focus {
      border-color: #4caf50;
      box-shadow: 0 0 5px rgba(76, 175, 80, 0.4);
      outline: none;
    }

    .submit-btn {
      background: linear-gradient(to right, #4caf50, #2e7d32);
      color: white;
      border: none;
      border-radius: 10px;
      padding: 12px;
      font-size: 1.1rem;
      cursor: pointer;
      transition: background 0.3s;
    }

    .submit-btn:hover {
      background: linear-gradient(to right, #45a049, #1b5e20);
    }

    .footer {
      text-align: center;
      margin-top: 25px;
      font-size: 0.95em;
      color: #444;
    }

    .footer a {
      color: #2b6cb0;
      text-decoration: none;
    }

    .footer a:hover {
      text-decoration: underline;
    }

    .error {
      color: #e53935;
      font-size: 0.9em;
      margin-top: -10px;
    }

    .radio-group {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .radio-group label {
      font-weight: normal;
    }
  </style>
</head>
<body>

  <div class="signup-container">
    <img src="/images/signupnow.png" style="max-width: 40%; height: auto; display: block; margin: 0 auto 20px;">
    <h2>Create Your Account</h2>

    <form id="signupForm" action="/signup" method="POST">

      <label for="name">Name *</label>
      <input type="text" id="name" name="name" required>

      <label>Gender *</label>
      <div class="radio-group">
        <label><input type="radio" name="gender" value="Male" required> Male</label>
        <label><input type="radio" name="gender" value="Female"> Female</label>
        <label><input type="radio" name="gender" value="Not Sure"> I'm Not Sure</label>
      </div>

      <label for="age">Age *</label>
      <input type="number" id="age" name="age" min="1" max="120" required>

      <label for="email">Email *</label>
      <input type="email" id="email" name="email" required>

      <label for="supermarket">Most Visited Supermarket</label>
      <select id="supermarket" name="supermarket">
        <option value="">-- Select --</option>
        <option value="fairprice">NTUC FairPrice</option>
        <option value="shengsiong">Sheng Siong</option>
        <option value="coldstorage">Cold Storage</option>
        <option value="giant">Giant</option>
        <option value="others">Others</option>
      </select>

      <label for="password">Password *</label>
      <input type="password" id="password" name="password" required>

      <label for="confirm">Confirm Password *</label>
      <input type="password" id="confirm" name="confirm" required>

      <label for="invite">Special Invitation Code *</label>
      <input type="text" id="invite" name="invite" required>

      <div class="error" id="error-msg"></div>

      <button type="submit" class="submit-btn">Create Account</button>
    </form>

    <div class="footer">
      Already have an account? <a href="/login">Log In</a>
    </div>
  </div>

  <script>
    const form = document.getElementById('signupForm');
    const errorMsg = document.getElementById('error-msg');

    form.addEventListener('submit', function (e) {
      errorMsg.textContent = '';

      const password = document.getElementById('password').value;
      const confirm = document.getElementById('confirm').value;
      const invite = document.getElementById('invite').value;

      if (password !== confirm) {
        e.preventDefault();
        errorMsg.textContent = 'Passwords do not match.';
        return;
      }

      if (invite.trim().toLowerCase() !== 'ilovekns') {
        e.preventDefault();
        errorMsg.textContent = 'Invalid invitation code.';
        return;
      }
    });
  </script>

</body>
</html>
