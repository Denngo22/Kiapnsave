<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up – Kiap N' Save</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: #f4fbff;
      margin: 0;
      padding: 0;
    }

    .signup-container {
      max-width: 500px;
      margin: 60px auto;
      background: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }

    h2 {
      text-align: center;
      color: #2b4c60;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    label {
      font-weight: bold;
    }

    input, select {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1em;
    }

    .submit-btn {
      background: #4caf50;
      color: white;
      border: none;
      cursor: pointer;
      transition: background 0.3s ease;
      font-size: 1.1em;
    }

    .submit-btn:hover {
      background: #388e3c;
    }

    .footer {
      text-align: center;
      margin-top: 20px;
      font-size: 0.9em;
      color: #555;
    }

    .error {
      color: red;
      font-size: 0.9em;
    }

    .social-login {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-top: 20px;
    }

    .social-button {
      padding: 10px;
      text-align: center;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1em;
    }

    .google {
      background: #db4437;
      color: white;
    }

    .social-button:hover {
      opacity: 0.9;
    }
  </style>
</head>
<body>

  <div class="signup-container">
    <h2>Join Kiap N' Save</h2>

    <!-- Social Login -->
    <div class="social-login">
      <button class="social-button google">Sign Up with Google</button>
    </div>

    <hr style="margin: 30px 0;">

    <!-- Form -->
    <form id="signupForm">
      <label for="name">Name *</label>
      <input type="text" id="name" name="name" required>

      <label for="age">Age Range *</label>
      <select id="age" name="age" required>
        <option value="">-- Select Age Range --</option>
        <option value="11-20">11–20</option>
        <option value="21-30">21–30</option>
        <option value="31-40">31–40</option>
        <option value="41-50">41–50</option>
        <option value="51-60">51–60</option>
        <option value="61-70">61–70</option>
        <option value="71-80">71–80</option>
        <option value="81-90">81–90</option>
        <option value="91-100">91–100</option>
      </select>

      <label for="email">Email *</label>
      <input type="email" id="email" name="email" required>

      <label for="supermarket">Most Visited Supermarket</label>
      <select id="supermarket" name="supermarket">
        <option value="">-- Select --</option>
        <option value="fairprice">NTUC FairPrice</option>
        <option value="shengsiong">Sheng Siong</option>
        <option value="coldstorage">Cold Storage</option>
        <option value="giant">Giant</option>
        <option value="others">Others</option>
      </select>

      <label for="password">Password *</label>
      <input type="password" id="password" name="password" required>

      <label for="confirm">Confirm Password *</label>
      <input type="password" id="confirm" name="confirm" required>

      <div class="error" id="error-msg"></div>

      <button type="submit" class="submit-btn">Create Account</button>
    </form>

    <div class="footer">
      Already have an account? <a href="/login">Log In</a>
    </div>
  </div>

  <!-- JS for validation -->
  <script>
    const form = document.getElementById('signupForm');
    const errorMsg = document.getElementById('error-msg');

    form.addEventListener('submit', function(e) {
      errorMsg.textContent = '';

      const password = document.getElementById('password').value;
      const confirm = document.getElementById('confirm').value;

      if (password !== confirm) {
        e.preventDefault();
        errorMsg.textContent = 'Passwords do not match.';
        return false;
      }
    });
  </script>

</body>
</html>
