<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Friends | Kiap N'Save</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background: #f9f9ff;
    }
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: white;
      border-bottom: 1px solid #eee;
    }
    .logo {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .logo img {
      height: 40px;
    }
    .logo span {
      font-size: 1.5rem;
      color: #28a745;
      font-weight: bold;
    }
    nav a {
      margin: 0 1rem;
      text-decoration: none;
      font-weight: 500;
    }
    nav a:nth-child(1) { color: #8e44ec; }
    nav a:nth-child(2) { color: #2980b9; }
    nav a:nth-child(3) { color: #27ae60; }
    .signout {
      border: 1px solid #f39c12;
      color: #f39c12;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      background: white;
      font-weight: bold;
      cursor: pointer;
    }
    .main {
      padding: 2rem;
    }
    h2 {
      color: orange;
    }
    .friend-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .friend-card {
      background: white;
      border: 2px solid #ffe0b2;
      border-radius: 12px;
      padding: 1rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }
    .friend-card img {
      width: 64px;
      height: 64px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid orange;
    }
    .friend-details {
      flex: 1;
    }
    .friend-details h4 {
      margin: 0;
      font-size: 1.2rem;
      color: #d35400;
    }
    .friend-details p {
      margin: 0.25rem 0 0 0;
      font-size: 0.9rem;
      color: #555;
    }
    .friend-actions button {
      padding: 0.4rem 0.8rem;
      background: #fff3e0;
      color: #e67e22;
      border: 1px solid #f39c12;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }
    .search-bar {
      display: flex;
      gap: 1rem;
      margin: 2rem;
      flex-wrap: wrap;
    }
    .search-bar input[type="text"] {
      flex: 1;
      padding: 0.5rem;
      border: 2px solid #ffe0b2;
      border-radius: 8px;
      outline: none;
    }
    .search-bar button {
      padding: 0.5rem 1rem;
      background: orange;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }
    .modal {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-color: rgba(0,0,0,0.5);
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }
    .modal-content {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      width: 90%;
      max-width: 400px;
      max-height: 80vh;
      overflow-y: auto;
    }
    .modal-card {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 0;
      border-bottom: 1px solid #eee;
    }
    .modal-card img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }
    .modal-card button {
      background: #28a745;
      color: white;
      border: none;
      border-radius: 6px;
      padding: 0.4rem 0.8rem;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">
      <img src="/images/logobetter.png" alt="Logo">
      <span>Kiap N'Save</span>
    </div>
    <nav>
      <a href="/dashboard">Dashboard</a>
      <a href="/friends">Friends</a>
      <a href="/settings">Settings</a>
    </nav>
    <div style="display: flex; align-items: center; gap: 1rem;">
      <% const rawGender = user.gender?.trim().toLowerCase();
         const prefix = rawGender === 'female' ? 'Aunty' : rawGender === 'male' ? 'Uncle' : '';
         const nameCapitalized = user.name.charAt(0).toUpperCase() + user.name.slice(1); %>
      <span style="font-size: 1rem; font-weight: 500; color: #333;">
        üëã Hi again, <strong id="username"><%= prefix %> <%= nameCapitalized %>!</strong>
      </span>
      <button class="signout" onclick="location.href='/logout'">Sign Out</button>
    </div>
  </header>

  <div class="main">
    <h2>Your Friends</h2>
    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="Search friend by name">
      <button onclick="openFriendModal()">Search</button>
    </div>

    <div id="friendModal" class="modal">
      <div class="modal-content" id="modalResults">
        <h3>Matching Friends</h3>
      </div>
    </div>

    <div class="friend-list">
      <% friends.forEach(friend => { %>
        <div class="friend-card">
          <img src="/images/avatar<%= ((friend.id % 6) + 1) %>.png" alt="Friend Avatar">
          <div class="friend-details">
            <h4><%= friend.name %></h4>
            <p>üõç Loves good deals</p>
          </div>
          <div class="friend-actions">
            <form action="/remove-friend" method="POST">
              <input type="hidden" name="friendId" value="<%= friend.id %>">
              <button type="submit">üóë Remove</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script>
    async function openFriendModal() {
      const query = document.getElementById('searchInput').value.trim();
      if (!query) return;

      const res = await fetch('/api/search-friends?name=' + encodeURIComponent(query));
      const matches = await res.json();

      const modal = document.getElementById('friendModal');
      const modalContent = document.getElementById('modalResults');

      if (matches.length === 0) {
        modalContent.innerHTML = '<p>No users found.</p>';
      } else {
        modalContent.innerHTML = '<h3>Matching Friends</h3>' + matches.map(user => `
          <div class="modal-card">
            <div style="display: flex; align-items: center; gap: 1rem;">
              <img src="/images/avatar${(user.id % 6) + 1}.png" alt="Avatar">
              <strong>${user.name}</strong>
            </div>
            <form method="POST" action="/add-friend">
              <input type="hidden" name="email" value="${user.email}">
              <button type="submit">Add</button>
            </form>
          </div>
        `).join('');
      }
      modal.style.display = 'flex';
    }

    window.onclick = function(event) {
      const modal = document.getElementById('friendModal');
      if (event.target === modal) {
        modal.style.display = 'none';
      }
    }
  </script>
</body>
</html>
