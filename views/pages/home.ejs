<script>
  let cardIndex = 0;
  let chartRendered = false;
  let trendChart = null;

  function scrollCard(direction) {
    cardIndex = Math.max(0, Math.min(1, cardIndex + direction));
    document.getElementById('cardScroll').style.transform = `translateX(-${cardIndex * 350}px)`;

    // Only create the chart the first time we scroll to it
    if (cardIndex === 1 && !chartRendered) {
      renderTrendChart();
      chartRendered = true;
    }
  }

  function renderTrendChart() {
    const ctx = document.getElementById('trendChart').getContext('2d');
    trendChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
        datasets: [{
          label: 'SGD Spent',
          data: [120, 150, 130, 180],
          fill: false,
          borderColor: 'orange',
          tension: 0.3,
          pointBackgroundColor: 'green'
        }]
      },
      options: {
        responsive: false,
        plugins: {
          legend: { display: false }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              stepSize: 50
            }
          }
        }
      }
    });
  }
  setInterval(() => {
  cardIndex = (cardIndex + 1) % 2; // Alternate between 0 and 1
  document.getElementById('cardScroll').style.transform = `translateX(-${cardIndex * 350}px)`;

  // Lazy-load the chart only once
  if (cardIndex === 1 && !chartRendered) {
    renderTrendChart();
    chartRendered = true;
  }
}, 3000);
</script>




